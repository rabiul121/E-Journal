<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Sacramento&display=swap" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />
    <style>

        /* change transition duration to control the speed of fade effect */
        .carousel-item {
            transition: transform 2.6s ease-in-out;
        }

        .carousel-fade .active.carousel-item-start,
        .carousel-fade .active.carousel-item-end {
            transition: opacity 0s 2.6s;
        }
    </style>
</head>
<body>
    @{
        ViewData["Title"] = "Home Page";
    }

    <div class="container">
        <div class="text-center">
            <h1 class="display-4">Welcome to E-Journal</h1>
            <h4>The best free app to keep your daily notes organized!</h4>
        </div>
    </div>

    <br />

    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">

        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/Slides/slide1.jpg" alt="First slide">
                <div class="carousel-caption d-none d-md-block">
                    <div class="display-3 car-cap">
                        <p>Note Anything!</p>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Slides/slide2.jpg" alt="Second slide">
                <div class="carousel-caption d-none d-md-block">
                    <div class="display-3 car-cap">
                        <p>Keep Clean!</p>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Slides/slide3.jpg" alt="Third slide">
                <div class="carousel-caption d-none d-md-block">
                    <div class="display-3 car-cap">
                        <p>Keep Organized!</p>
                    </div>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <br />
    <br />



    <div class="container">
        <div class="row">
            <div class="col text-center get-started">
                <p>
                    <a asp-controller="Journals" asp-action="Index">Get Started!</a>
                </p>
            </div>
        </div>
    </div>
    <br />


</body>
</html>